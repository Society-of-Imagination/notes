---
//?             [PROFILE]
//?             [TO:DO] : Migrates the Profile System to {N} Namespace.
//?             [TO:DO] : {team} Collection Template Integration.
///             [IMPORTS]
import N from "@n/N.astro";
import Lottie from "@c/Element/Lottie/Lottie.astro";                        /// [Lottie]    ->  [Int()]
import Banner from "@c/Element/Banner/Banner.astro";                        /// [Banner]    ->  [Display Banner]
import ProfileCard from "@c/Element/Profile/ProfileCard/ProfileCard.astro"; /// [Profile]   ->  [Profile Card]
//?             [DATA]
const { content } = Astro.props;						                    ///	[Astro Props]
let profileStyle = "background-image: url('"+content.img+"'); background-position: center center; background-size: contain; background-repeat: no-repeat;";
let title = "Profile";
let description = "Profile Description";
