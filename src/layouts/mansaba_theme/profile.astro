<N ns="theme" title={title} description={description}>
        <!-- [MENU Space]   ->      [START] -->
        <div class="px-4 py-12 space-y-8">
        </div>
        <!-- [MENU Space]   ->      [END]   -->
        
        <!-- [BANNER] --> {(content.position == "staff") && <Banner bannerConcept="staff" />}

        <!-- [PROFILE]      ->      [START] -->
        <div class="px-4 py-12 space-y-8">
            <section class="bg-offset rounded-3xl py-4 dark:bg-gray-800 dark:text-gray-100">
                <div class="container flex flex-col mx-auto lg:flex-row">

                    <div class="w-full lg:w-1/3" style={profileStyle}></div>
                    
                    <div class="flex flex-col w-full p-6 lg:w-2/3 md:p-8 lg:p-12">
            
                        <!-- [Badges]   ->  [START]  -->
                        <div class="mt-8 container mx-auto flex items-center justify-around">
                         
                        </div>
                        <!-- [Badges]   ->  [END]  -->

                        <h2 class="text-3xl font-semibold leading-none">{content.username}'s Team Page</h2>
                        <p class="mt-4 mb-8 text-sm">{content.description}</p>
                        <p class="mt-4 mb-8 gradient-text uppercase">Bloodtype: {content.bloodtype}</p>
                        <button type="button" class="relative px-8 py-4 ml-4 overflow-hidden font-semibold rounded-3xl bg-orange-400 dark:text-gray-900">No Purpose Button
